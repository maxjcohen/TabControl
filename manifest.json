{
    "manifest_version": 2,
    "name": "TabControl",
    "version": "0.1",
    "description": "This is a remake of the DontRestoreTabs extension. It is compatible with Thunderbird 68+. The code is based on the tabControl extension.",
    "author": "Max Cohen and Guy Lifshitz",
    "homepage_url": "https://github.com/maxjcohen/tabControl/",
    "applications": {
        "gecko": {
            "id": "tabControl@nuitcodecitoyen.org",
            "strict_min_version": "68.0a1"
        }
    },
    "experiment_apis": {
        "tabControl": {
            "schema": "schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    ["tabControl"]
                ],
                "script": "experiments.js",
                "events": ["startup"]
            }
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
