{
    "manifest_version": 2,
    "name": "TabControl",
    "description": "Automatically close old tabs when opening new mails.",
    "version": "0.3.0",
    "author": "Max&Guy",
    "applications": {
	"gecko": {
	    "id": "tabcontrol@nuitcodecitoyen.org",
	    "strict_min_version": "68.0"
	}
    },
    "background": {
	"page": "src/background.html"
    },
    "options_ui": {
	"page": "src/settings.html"
    },
    "permissions": ["storage"],
    "icons": {
	"64": "images/internet.png",
	"32": "images/internet-32px.png",
	"16": "images/internet-16px.png"
    }
}
